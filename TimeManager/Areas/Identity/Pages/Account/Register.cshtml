@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<header>
    <div class="container">
        <div class="header-content">
            <a class="logo" asp-controller="Home" asp-action="Index">
                <i class="fas fa-clock"></i> Тайм-менеджер
            </a>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-custom" asp-controller="Schedule" asp-action="Index">Расписание</a>
                        </li>
                    </ul>
                    <div class="auth-buttons">
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<User> SignInManager
                        @inject UserManager<User> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a class="btn btn-custom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                Привет, @User.Identity?.Name!
                            </a>
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="btn btn-custom">Выйти</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-custom" asp-area="Identity" asp-page="/Account/Login">Вход</a>
                            <a class="btn btn-custom" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section class="login-container">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Поле для логина (имени пользователя) -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Login"
                               class="form-control"
                               aria-required="true"
                               placeholder="username" />
                        <label asp-for="Input.Login" class="form-label">Login</label>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>

                    <!-- Поле для электронной почты -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="email"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Поле для имени -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName"
                               class="form-control"
                               aria-required="true"
                               placeholder="First Name" />
                        <label asp-for="Input.FirstName" class="form-label">First Name</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <!-- Поле для фамилии -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.LastName"
                               class="form-control"
                               aria-required="true"
                               placeholder="Last Name" />
                        <label asp-for="Input.LastName" class="form-label">Last Name</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <!-- Поле для Telegram ID -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.TelegramId"
                               class="form-control"
                               placeholder="Telegram ID" />
                        <label asp-for="Input.TelegramId" class="form-label">Telegram ID</label>
                        <span asp-validation-for="Input.TelegramId" class="text-danger"></span>
                    </div>

                    <!-- Поле для пароля -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Поле для подтверждения пароля -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Кнопка регистрации -->
                    <div class="cta-buttons">
                        <button id="registerSubmit"
                                type="submit"
                                class="btn btn-primary cta-btn">
                            Register
                        </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
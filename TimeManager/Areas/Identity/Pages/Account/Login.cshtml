@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <section class="login-container">
                <form id="account" method="post">
                    <h2>Используйте свою учетную запись для входа</h2>
                    <hr/>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="username"
                               aria-required="true"
                               placeholder="name@example.com"/>
                        <label asp-for="Input.Email" class="form-label">Электронная почта</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="password"/>
                        <label asp-for="Input.Password" class="form-label">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                            Запомнить меня?
                        </label>
                    </div>

                    <div class="cta-buttons">
                        <button id="login-submit"
                                type="submit"
                                class="btn btn-primary cta-btn">
                            Войти
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <p>
                            <a asp-page="./Register"
                               asp-route-returnUrl="@Model.ReturnUrl"
                               class="btn btn-outline">
                                Зарегистрироваться как новый пользователь
                            </a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}